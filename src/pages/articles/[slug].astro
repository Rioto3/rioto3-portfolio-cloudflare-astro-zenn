          <span>{new Date(date || new Date()).toLocaleDateString('ja-JP', {year: 'numeric', month: 'long', day: 'numeric'})}„Å´ÂÖ¨Èñã</span>
        </div>
      </div>
      
      <h1 class="text-3xl font-bold mb-6">{title}</h1>
      
      <div class="flex flex-wrap gap-2 mb-4">
        {topics && topics.map((topic: string) => (
          <span class="bg-gray-100 text-gray-700 rounded-full px-3 py-1 text-sm">{topic} </span>
        ))}
      </div>
    </div>
  </div>
  
  <div class="max-w-3xl mx-auto px-4 py-8">
    <div class="znc">
      <Fragment set:html={html} />
    </div>
  </div>
</MainLayout>

