      <div class="znc prose prose-lg max-w-none">
        <Fragment set:html={html} />
      </div>
    </div>
    
    <!-- Ë®ò‰∫ã„Éï„ÉÉ„Çø„ÉºÈÉ®ÂàÜ -->
